<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_90sdp"
    android:layout_margin="5dp"
    android:elevation="@dimen/_3sdp"
    app:cardUseCompatPadding="true">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/g_blue" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:text="Barbequed sasi"
        android:textColor="@color/black"

        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPopularCategory"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:text="Special sushi product"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@id/tvPopular" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_category"
        android:gravity="center"
        app:icon="@drawable/ic_baseline_shopping_basket_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPopularCategory" />


</androidx.constraintlayout.widget.ConstraintLayout>